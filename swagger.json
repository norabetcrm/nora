{
  "openapi": "3.0.0",
  "info": {
    "title": "WhatsApp Mesaj Gönderim Simülatörü API",
    "version": "1.0.0",
    "description": "WhatsApp Mesaj Gönderim Simülatörü için REST API dokümantasyonu"
  },
  "servers": [
    {
      "url": "http://localhost:5000",
      "description": "Lokal geliştirme sunucusu"
    }
  ],
  "paths": {
    "/api/users": {
      "get": {
        "summary": "Tüm kullanıcıları listeler",
        "responses": {
          "200": {
            "description": "Başarılı"
          }
        }
      },
      "post": {
        "summary": "Yeni kullanıcı ekler",
        "responses": {
          "201": {
            "description": "Oluşturuldu"
          }
        }
      }
    },
    "/api/users/{id}": {
      "delete": {
        "summary": "Belirli bir kullanıcıyı siler",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Başarılı"
          },
          "404": {
            "description": "Kullanıcı bulunamadı"
          }
        }
      }
    },
    "/api/users/csv": {
      "post": {
        "summary": "CSV dosyasından kullanıcıları içe aktarır",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Başarılı"
          }
        }
      }
